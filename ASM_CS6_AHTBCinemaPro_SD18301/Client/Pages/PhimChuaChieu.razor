@page "/phimchuachieu"
@inject HttpClient Http
@using ASM_CS6_AHTBCinemaPro_SD18301.Models
@using Newtonsoft.Json

<section>
    <div class="scroll-holder">
        <div class="scroll-tray">
            @* Dynamically generated images *@
            @if (PhimChuaChieuList != null)
            {
                @foreach (var phim in PhimChuaChieuList)
                {
                    <div>
                        <img src="/Image/phim/@phim.HinhAnh" alt="@phim.TenPhim" style="width: 200px; height: 300px; object-fit: cover;" />
                    </div>
                }
            }
        </div>
    </div>
</section>

<div class="container text-center">
    <h1 class="d-flex justify-content-center">PHIM CHƯA CHIẾU</h1>
    <br />
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
        @if (PhimChuaChieuList != null)
        {
            @foreach (var phim in PhimChuaChieuList)
            {
                <div class="col mb-4">
                    <div class="card h-100">
                        <a href="@($"/phimchitiet/{phim.IdPhim}")">
                            <img class="card-img-top" src="/Image/phim/@phim.HinhAnh" alt="@phim.TenPhim" style="height: 300px; object-fit: cover;" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@phim.TenPhim</h5>
                            <p class="card-text">@phim.DienVien</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<h1 class="d-flex justify-content-center">TRAILER</h1>
<div class="row trailer-section">
    <div class="col-md-6 mb-4">
        <iframe width="100%" height="315" src="https://www.youtube.com/embed/dZOaI_Fn5o4?si=gr9FbsxLGCEwa1Q1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
    <div class="col-md-6 mb-4">
        <iframe width="100%" height="315" src="https://www.youtube.com/embed/1cK1pcQyzg0?si=kNFg8gUOUtR4opHt" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
</div>


@code {
    private List<Phim> PhimChuaChieuList;

    protected override async Task OnInitializedAsync()
    {
        var response = await Http.GetStringAsync("api/Phim/chuachieu");
        PhimChuaChieuList = JsonConvert.DeserializeObject<List<Phim>>(response);
    }
}
